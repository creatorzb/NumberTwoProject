<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image_view"
            android:layout_marginTop="31dp"


            android:layout_marginRight="44dp"
            android:layout_marginEnd="44dp" />

        <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textSize="20dp"
          android:textColor="#0e0c0c"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@+id/image_view"
            android:layout_alignRight="@+id/image_view"
            android:layout_alignEnd="@+id/image_view" />

        <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/bianhao"
            android:textSize="20dp"
             android:textColor="#0e0c0c"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/name"
            android:layout_alignRight="@+id/image_view"
            android:layout_alignEnd="@+id/image_view"
            android:gravity="center"/>

        <CheckBox

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:focusable="false"

            android:layout_marginRight="33dp"
            android:layout_marginEnd="33dp"
            android:layout_below="@+id/bianhao"
            android:layout_alignRight="@+id/bianhao"
            android:layout_alignEnd="@+id/bianhao" />

    </RelativeLayout>


</LinearLayout>
