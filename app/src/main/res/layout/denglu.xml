<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="#EFFFFF" >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.5"
    android:background="#44000000"
    android:orientation="horizontal"
    android:gravity="center">

    <TextView

        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆"
        android:textSize="20dp"
        android:textColor="#ffffff"
        />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:background="#ECEDF1"
        android:orientation="horizontal"
        android:gravity="center">


    </LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="#ECEDF1" >

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.50"
        android:background="#ffffff"
        android:ems="10"
        android:hint="账号" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="密码"
        android:inputType="textPassword" />

</LinearLayout>
</LinearLayout>
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="#ECEDF1" >
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="1"
  
    android:background="#ECEDF1" >

      
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="1.1"
    android:gravity="center_horizontal"
    android:background="#ECEDF1" >

     <Button
         android:id="@+id/button1"
         android:layout_width="300dp"
         android:layout_height="match_parent"
         android:layout_marginTop="10sp"
         android:background="@drawable/me"
          android:textColor="#ffffff"
         android:text="登陆"
       />

</LinearLayout>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2.2"
   
    android:background="#ECEDF1" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？" 
        android:textColor="#1e91ff"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView_zhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="新用户注册"
        android:layout_marginTop="10dp"
        android:textColor="#1d91ff" />

</RelativeLayout>
</LinearLayout>
</LinearLayout>
   <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:background="#ECEDF1" >

       <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/radioButton1"
           android:layout_alignBottom="@+id/radioButton1"
           android:layout_toRightOf="@+id/radioButton1"
           android:text="服务条款" 
           android:textColor="#1e91ff"
           android:textSize="10sp"
           />

       <RadioButton
           android:id="@+id/radioButton1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_alignParentLeft="true"
           android:layout_marginBottom="17dp"
           android:layout_marginLeft="90dp"
           android:text="我已经阅读同意"
           android:textColor="#88000000"
           android:textSize="10sp" />

</RelativeLayout>

</LinearLayout>
